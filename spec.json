{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 560,
  "title": { "text": "Daily Smoking Prevalence in Australia (NDSHS 2022â€“23)", "anchor": "start" },
  "config": {
    "view": { "stroke": null },
    "legend": { "titleFontSize": 12, "labelFontSize": 11 },
    "axis": { "labelFontSize": 11, "titleFontSize": 12 },
    "title": { "fontSize": 18 }
  },
  "projection": {
    "type": "mercator",
    "parallels": [-18, -36],
    "rotate": [-134, 0, 0],
    "center": [0, -30],
    "scale": 820,
    "precision": 0.1
  },
  "layer": [
    {
      "data": { "graticule": { "step": [20, 20] } },
      "mark": { "type": "geoshape", "stroke": "#b9c2cc", "strokeWidth": 0.5 }
    },
    {
      "data": {
        "url": "aus_admin1.topojson",
        "format": { "type": "topojson", "feature": "ne_10m_admin_1_states_provinces" }
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": { "url": "smoking_prevalence_australia.csv" },
            "key": "State/Territory",
            "fields": ["Daily smoking (%)", "Regular smoking (%)"]
          }
        }
      ],
      "mark": { "type": "geoshape", "stroke": "#ffffff", "strokeWidth": 0.8 },
      "encoding": {
        "color": {
          "field": "properties.name",
          "type": "nominal",
          "scale": {
            "domain": [
              "New South Wales",
              "Victoria",
              "Queensland",
              "South Australia",
              "Western Australia",
              "Tasmania",
              "Northern Territory",
              "Australian Capital Territory"
            ],
            "range": [
              "#fee5d9",
              "#fcbba1",
              "#fc9272",
              "#fb6a4a",
              "#de2d26",
              "#a50f15",
              "#7f0000",
              "#fcae91"
            ]
          },
          "legend": null
        },
        "tooltip": [
          { "field": "properties.name", "type": "nominal", "title": "State/Territory" },
          { "field": "Daily smoking (%)", "type": "quantitative", "format": ".1f" },
          { "field": "Regular smoking (%)", "type": "quantitative", "format": ".1f" }
        ]
      }
    }
  ]
}
